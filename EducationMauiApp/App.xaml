<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EducationMauiApp"
             xmlns:vm="clr-namespace:EducationMauiApp.ViewModels"
             x:Class="EducationMauiApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <vm:GraphLayoutViewModel x:Key="GraphLayoutViewModel"/>
            <vm:ConditionsViewModel x:Key="ConditionsViewModel"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
