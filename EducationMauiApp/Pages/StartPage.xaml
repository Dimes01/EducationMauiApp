<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationMauiApp.Pages.StartPage"
             Title="StartPage"
             BackgroundColor="{AppThemeBinding Dark={StaticResource Secondary}, Light={StaticResource Primary}}">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Button
            Text="Новый проект"
            Style="{StaticResource StartButtons}"
            Clicked="NewProject_Clicked"/>
        <Button
            Text="Загрузить проект"
            Style="{StaticResource StartButtons}"
            Clicked="OpenProject_Clicked"/>

    </VerticalStackLayout>
</ContentPage>