<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationMauiApp.UIElements.GraphViewElement"
             x:Name="Root"
             Background="Red">
    <Path
        BindingContext="{x:Reference Root}"
        Fill="{Binding Fill, Mode=OneWay}"
        Stroke="{Binding Stroke, Mode=OneWay}"
        StrokeThickness="{Binding StrokeThickness, Mode=OneWay}"
        Data="{Binding Geometry, Mode=OneWay}"/>
</ContentView>
